<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F6F2"
    tools:context=".FunctionL">

    <ListView
        android:id="@+id/lvLF"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:dividerHeight="2dp"
        android:divider="@color/colorAccent"
        android:layout_weight="1"/> >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLFu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F5E7BE"
            android:padding="15dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/etLFxL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="x(1) = x (start)"/>

        <EditText
            android:id="@+id/etLFxR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="x(2) = x (stop)"/>

        <EditText
            android:id="@+id/etLFN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How many points?"/>

        <Button
            android:onClick="fromto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:fontFamily="@font/bonnard"
            android:textAllCaps="false"
            android:text="Ok"/>

        <Button
            android:id="@+id/bViewGraphL"
            android:onClick="viewGraph"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View graph\nof function"/>

    </LinearLayout>


</LinearLayout>